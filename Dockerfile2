FROM alpine:3.19

RUN apk update \
    && apk upgrade && apk add --no-cache nginx openssl dumb-init  \
    && rm -rf /var/cache/apk/*


COPY ./configuration.sh .
COPY ./static /app/static

EXPOSE 443

COPY ./nginx.conf /etc/nginx/nginx.conf


ENTRYPOINT ["/usr/bin/dumb-init", "--"]
CMD ["sh", "configuration.sh"]